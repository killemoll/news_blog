<p id="notice"><%= notice %></p>

<h1>Список новостей</h1>

<table>
  <thead>
    <tr>
      <th>Тема</th>
      <th>Тело новости</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<%= will_paginate %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.tittle %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Показать', post %></td>
        <td><%= link_to 'Изменить', edit_post_path(post) %></td>
        <td><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Вы уверены??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новость', new_post_path %>
